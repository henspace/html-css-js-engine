{
  "name": "hcje",
  "version": "0.0.16",
  "description": "HTML-CSS-JS-Engine",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "document": "npm run document-engine & npm run document-tools",
    "document-engine": "jsdoc ./source/hcje/scripts --destination ./docs/jsdoc/engine -c jsdoc-config.json --readme ./README.md",
    "document-tools": "jsdoc ./tools --destination ./docs/jsdoc/tools -c jsdoc-config.json --readme ./tools/README.md",
    "test": "node ./tools/testing/runner.js test-config.json",
    "serve-build": "node ./tools/server/server.js 8080 ./build",
    "serve-source": "node ./tools/server/server.js 8080 ./source",
    "build": "node ./tools/build/build.js ./build-config.json",
    "prebuild": "npm run test",
    "postbuild": "npm run document"
  },
  "keywords": [
    "game",
    "engine"
  ],
  "author": "Steve Butler (henspace.com)",
  "license": "MIT",
  "devDependencies": {
    "jsdoc": "^4.0.4"
  }
}
