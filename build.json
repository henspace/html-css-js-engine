{
  "indexFile": "./source/index.html",
  "imagePacksDir": "./image_packs", 
  "assetsImagePackName": "imagePack",
  "outputDir": "./build",
  "zippedOutputDir": "./build/_ZIPPED",
  "root": "source",
  "filter": {
    "includeFiles": {
      "regex": "[.](?:css|html|jpeg|jpg|js|json|png|md|mp3|txt)$",
      "flags": "i"
    }
  },
  "parserConfig": {
    "html": {
      "prefix": "",
      "suffix": ""
    },
    "md": {
      "prefix": "",
      "suffix": ""
    },
    "js": {
      "prefix": "/* Copyright %%_BUILD_YEAR_%% %%_AUTHOR_%%\n * License: %%_LICENCE_%%\n */\n",
      "suffix": ""
    }
  },
  "zipCommand": "\"C:\\Program Files\\7-Zip\\7z.exe\" a -tzip ${outputDir} .\\${sourceDir}\\*"  
}
